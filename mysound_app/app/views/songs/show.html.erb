<p id="notice"><%= notice %></p>

<p>
  <strong>Song name:</strong>
  <%= @song.try('song_name') %>
</p>

<p>
  <strong>Track:</strong>
  
  <audio src="<%= @song.track.url %>" controls></audio>
</p>

<p>
  <strong>Cover:</strong>
  <%= image_tag @song.song_cover, :class => "songcover" %>
</p>

<p>
  <strong>User:</strong>
  <%= @song.user.username %>
</p>

<%= render partial: 'comments/form', locals: { commentable: @song } %>

<ul>
 <%= render partial: 'comments/comment', collection: @comments , locals: { commentable: @song } %>
</ul>

<%= link_to 'Edit', edit_song_path(@song) %> |
<%= link_to 'Back', songs_path %>
