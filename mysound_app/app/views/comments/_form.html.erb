<table>

  <td>
    <%= form_for(:comment, url: comments_path(commentable_type: commentable.class.to_s.underscore, commentable_id: commentable.id)) do |f| %>
    <%= f.label :comment %>
    <%= f.text_area :comment, placeholder:"what do you think of this song?"%>
  </td>
</table>

<%= f.submit " Comment!", :class => 'button'  %>

<% end %>